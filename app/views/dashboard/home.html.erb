<div class="container">
  <h1>Dashboard <small><%= @team.name.titleize %></small></h1>
  <h4>Wins: <%= @team.wins %> - Losses: <%= @team.losses %></h4>
  <h4>Cash: <%= number_to_currency(@team.cash) %></h4>
  <h4>Operating Costs: <%= number_to_currency(@team.operating_costs) %></h4>
  <table class="table table-striped table-bordered">
    <tr>
      <th>Player</th>
      <th>Race</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Salary</th>
      <th>Age</th>
      <th>Earnings</th>
      <th>Fire</th>
    </tr>
    <% @team.players.each do |p| %>
      <tr>
        <td><%= link_to p.username, p %></td>
        <td><%= p.race %></td>
        <td><%= p.wins %></td>
        <td><%= p.losses %></td>
        <td><%= p.salary %></td>
        <td><%= p.age %></td>
        <td><%= p.earnings %></td>
        <td>
          <%= link_to remove_player_path(player_id: p.id), method: :delete, 'data-confirm': 'Are you sure?' do %>
            <button type="button" name="button" class="btn btn-danger">
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
